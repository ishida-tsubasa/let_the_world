<!DOCTYPE html>
<html>
  <head>
    <!--<title>LetTheWorld</title>-->
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Let The World Know', channels_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to('チャンネル新規作成', new_channel_path, class: 'nav-link') %>
          </li>
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to('ログアウト', destroy_user_session_path, method: 'delete', class: 'nav-link') %>
            <% else %>
              <%= link_to('ログイン', new_user_session_path, class: 'nav-link') %>
            <% end %>
          </li>
        </ul>
        <%= form_tag(channels_path, method: "get", class: "form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :search_word, "", { class: "form-control mr-sm-2" } %>
          <%= submit_tag "検索", class: "btn btn-outline-success my-2 my-sm-0" %>
        <% end %>
      </div>
    </nav>
    <% if flash[:notice] %>
     <div class="flash">
       <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
    <!--<footer>-->
      <h1 class="sub_title">世界に自分の考えを伝えよう</h1>
    <!--</footer>-->
  </body>
</html>
